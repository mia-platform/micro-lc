{
  "name": "@micro-lc/composer",
  "version": "2.0.3",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "default": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    },
    "./composer.development": {
      "default": "./dist/composer.development.js"
    },
    "./composer.production": {
      "default": "./dist/composer.production.js"
    }
  },
  "scripts": {
    "cleanup": "yarn run -T rimraf dist node_modules coverage",
    "check:types": "tsc --project ./scripts/tsconfig.build.json && echo \"âœ“ check types\"",
    "build:lib": "ts-node ./scripts/compile.esm.ts",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build": "yarn run -T run-s check:types build:lib build:dev build:prod",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' ts-mocha",
    "coverage": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' nyc ts-mocha"
  },
  "devDependencies": {
    "@micro-lc/interfaces": "workspace:*",
    "@open-wc/testing": "^3.1.8",
    "@rollup/plugin-replace": "^5.0.2",
    "@types/chai": "^4.3.5",
    "@types/chai-string": "^1.4.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/sinon": "^10.0.14",
    "@types/sinon-chai": "^3.2.9",
    "ajv": "^8.12.0",
    "chai": "^4.3.7",
    "chai-string": "^1.5.0",
    "es-module-shims": "^1.7.2",
    "esbuild": "^0.17.19",
    "glob": "^10.2.6",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "rollup-plugin-visualizer": "^5.9.0",
    "sinon": "^15.0.4",
    "sinon-chai": "^3.7.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.3",
    "vite-plugin-banner": "^0.7.0"
  },
  "dependencies": {
    "lit-html": "^2.7.4",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "es-module-shims": "*"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
