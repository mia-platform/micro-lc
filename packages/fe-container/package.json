{
  "name": "@mia-platform/fe-website",
  "version": "0.4.0",
  "description": "Launcher of microlc",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.4.2",
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@types/tinycolor2": "^1.4.3",
    "antd": "^4.17.2",
    "axios": "^0.26.0",
    "classnames": "^2.3.1",
    "craco-less": "^1.20.0",
    "history": "^4.10.1",
    "nock": "^13.2.1",
    "qiankun": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.4",
    "react-helmet": "^6.1.0",
    "react-intl": "^5.23.0",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "rxjs": "^7.4.0",
    "values.js": "^2.0.0",
    "zone.js": "^0.11.4"
  },
  "scripts": {
    "lint": "eslint src --ext .js,.ts,.tsx",
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --runInBand",
    "coverage": "yarn test --coverage --watchAll=false --collectCoverageFrom=src/**/*.{ts,tsx} --collectCoverageFrom=!src/index.tsx --collectCoverageFrom=!src/react-app-env*.ts",
    "dev:unit-watch": "yarn test",
    "dev": "npm-run-all -p dev:** start",
    "update-docker-version": "sed -i.bck \\\\\\\"s|version=\\\\\\\\\\\\\\\"[0-9]*\\\\\\\\.[0-9]*\\\\\\\\.[0-9]*.*\\\\\\\\\\\\\\\"|version=\\\\\\\\\\\\\\\"${npm_package_version}\\\\\\\\\\\\\\\"|\\\\\\\" Dockerfile",
    "version": "npm run update-docker-version && rm -fr Dockerfile.bck && git add Dockerfile",
    "analyze": "npm run build -- --stats && npx webpack-bundle-analyzer ./build/bundle-stats.json"
  },
  "proxy": "http://localhost:3456",
  "standard-version": {
    "skip": {
      "bump": true,
      "tag": true
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/register": "^7.16.0",
    "@mia-platform/core": "0.4.0",
    "@mia-platform/microlc-ui-components": "0.1.0",
    "@staticdeploy/mock-server": "^2.0.0",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "~13.5.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.1",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-gtm-module": "^2.0.1",
    "@types/react-helmet": "^6.1.4",
    "@types/react-router-dom": "^5.3.2",
    "craco-alias": "^3.0.1",
    "eslint-config-react-app": "^7.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-standard": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "react-gtm-module": "^2.0.11",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.2"
  },
  "license": "SEE LICENSE IN LICENSE"
}
