{
  "name": "@micro-lc/orchestrator",
  "version": "2.2.2",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/es/index.js",
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./micro-lc.development.js": {
      "default": "./dist/micro-lc.development.js"
    },
    "./micro-lc.production.js": {
      "default": "./dist/micro-lc.production.js"
    },
    "./polyfills/symbol-observable": {
      "default": "./dist/polyfills/symbol-observable.js"
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "cleanup": "yarn run -T rimraf ./dist ./.nyc_output ./coverage ./node_modules stats.html",
    "check:types": "tsc --project ./scripts/tsconfig.types.json && echo \"âœ“ check types\"",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' NODE_ENV=development ts-mocha",
    "coverage": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"CommonJS\" }' NODE_ENV=development nyc ts-mocha",
    "build:es": "ts-node scripts/compile.esm.ts",
    "build:cjs": "ts-node scripts/compile.cjs.ts",
    "build:prod": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:mfe-loader": "esbuild --platform=browser --format=esm --outfile=dist/microfrontend-loader.js --minify --bundle src/microfrontend-loader.ts",
    "build:polyfills": "ts-node scripts/build-polyfills.ts",
    "build": "yarn run -T run-s check:types build:es build:cjs build:dev build:prod build:polyfills build:mfe-loader",
    "esm": "ts-node scripts/esm-url-generator.ts",
    "serve": "vite dev"
  },
  "devDependencies": {
    "@babel/runtime": "^7.22.6",
    "@micro-lc/composer": "workspace:*",
    "@micro-lc/interfaces": "workspace:*",
    "@open-wc/testing": "^3.2.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/chai": "^4.3.8",
    "@types/chai-as-promised": "^7.1.6",
    "@types/chai-string": "^1.4.3",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.7",
    "@types/lodash-es": "^4.17.9",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.5",
    "@types/node-fetch": "^2.6.6",
    "@types/sinon": "^10.0.19",
    "@types/sinon-chai": "^3.2.12",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "es-module-shims": "^1.8.0",
    "esbuild": "^0.18.17",
    "glob": "^10.3.3",
    "lit-html": "^2.8.0",
    "lodash-es": "^4.17.21",
    "mocha": "^10.2.0",
    "node-fetch": "^2.6.12",
    "nyc": "^15.1.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "sinon": "^16.1.0",
    "sinon-chai": "^3.7.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^5.0.10",
    "vite-plugin-banner": "^0.7.1"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "qiankun": "^2.10.13",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "ajv": ">=8.11.0",
    "ajv-format": ">=2.1.1",
    "es-module-shims": ">=1.5.3"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
